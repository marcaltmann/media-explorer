{% extends "admin/base.html.jinja" %}
{% block title %}
  Resources
{% endblock %}

{% block content %}
  <div class="a-container">
    <h1 class="h2 u-mt">{{ count }} resources</h1>
    <nav>
      <a href="{{ url_for('admin-new-resource') }}">Add resource</a>
    </nav>
    <ul class="base-list u-mt">
      {% for resource in resources %}
        <li class="media u-mt-small">
          <img
            class="media__image"
            src="{{ resource.poster_url }}"
            alt=""
            width="60"
            height="60"
          />
          <div class="media__body">
            <p>
              <a
                href="{{ url_for('admin-resource-detail', resource_id=resource.id) }}"
                >{{ resource.name }}</a
              >
              {% if resource.is_video() %}Video{% else %}Audio{% endif %}
              {{ resource.duration|duration_format }}
            </p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
