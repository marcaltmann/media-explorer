{% extends "admin/base.html.jinja" %}
{% block title %}
  New category
{% endblock %}

{% block content %}
  <div class="a-container">
    <h1>New category</h1>

    <form
      method="post"
      action="{{ url_for('admin-create-category') }}"
      class="u-mt u-ll"
    >
      <div>
        <label for="name">Name:</label>
        <input
          id="name"
          type="text"
          name="name"
          value=""
          size="20"
          required
          minlength="2"
          maxlength="255"
        />
      </div>

      <div class="u-mt">
        <label for="description">Description (optional):</label>
        <textarea
          id="description"
          name="description"
          placeholder="Description of the category"
          maxlength="10000"
        ></textarea>
      </div>

      <div class="u-mt">
        <label for="wikidata-id">Wikidata ID (optional):</label>
        <input
          id="wikidata-id"
          type="text"
          name="wikidata_id"
          value=""
          size="20"
          maxlength="255"
          placeholder="e.g. Q123"
          pattern="Q\d{1,20}"
        />
      </div>

      <div class="u-mt">
        <button class="button" type="submit">Create category</button>
      </div>
    </form>
  </div>
{% endblock %}
