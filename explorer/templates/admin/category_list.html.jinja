{% extends "admin/base.html.jinja" %}
{% block title %}Categories{% endblock %}

{% block content %}
  <div class="a-container">
    <h1 class="h2">{{ count }} categories</h1>
    <nav>
      <a href="{{ url_for('admin-new-category') }}">Create category</a>
    </nav>

    <table class="a-table u-mt">
      <thead>
        <tr>
          <th><a href="?sort=name">Name</a></th>
          <th>Wikidata ID</th>
        </tr>
      </thead>

      <tbody>
        {% for category in category_list %}
          <tr>
            <td>
              <a
                href="{{ url_for('admin-category-detail', category_id=category.id) }}"
                >{{ category.name }}</a
              >
            </td>
            <td>{{ category.wikidata_id }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
