{% extends "base.html.jinja" %}
{% block title %}{{ collection.name }}{% endblock %}

{% block content %}
  <div class="container">
    <h1 class="u-mt">{{ collection.name }}</h1>
    <ul class="base-list grid u-mt">
      {% for resource in collection.resources %}
        <li class="media">
          <img
            class="media__image"
            src="{{ resource.get_thumb_url('md') }}"
            srcset="
              {{ resource.get_thumb_url('sm') }} 160w,
              {{ resource.get_thumb_url('md') }} 320w,
              {{ resource.get_thumb_url('lg') }} 480w
            "
            sizes="(max-width: 640px) 160px, (max-width: 1024px) 320px, 480px"
            alt="Thumbnail for {{ resource.name }}"
            width="240"
          />
          <div class="media__body">
            <p>
              <a
                href="{{ url_for('resource-detail', resource_id=resource.id) }}"
                ><b>{{ resource.name }}</b></a
              ><br />
              {% if resource.is_video() %}Video{% else %}Audio{% endif %}<br />
              {{ resource.duration|duration_format }}
            </p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
